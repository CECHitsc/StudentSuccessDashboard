@{
    Layout = "~/Views/Shared/_SingleColumnLayout.cshtml";
    ViewBag.IsWide = true;
    ViewBag.Title = "District Dashboard";
}

@section Title{
    <i class="icon-dashboard title"></i> @ViewBag.Title
}

<script type="text/javascript">
    var widgets = [];
</script>
@Html.Partial("_ServiceRequestsBySchoolWidget")
@Html.Partial("_ServiceTypeMetricsWidget")

@section scripts {
<script type="text/javascript">
    $(document).ready(function () {
        for(var i = 0; i < widgets.length; i++){
            widgets[i].Initialize();
        }
    });
</script>
}