@model SSD.ViewModels.ServiceAttendanceModel
@{
    Layout = "~/Views/Shared/_SingleColumnLayout.cshtml";
    ViewBag.IsWide = true;
    ViewBag.Title = "Service Attendance";
}
@section styles {
    @Styles.Render("~/Content/DataTables/css/bundle")
}

@section Title {
    <i class="icon-group title"></i> @ViewBag.Title
}

@section buttons{
    <a id="addServiceAttendance" class="btn btn-large btn-primary" role="button" data-toggle="modal" data-value="@Model.StudentAssignedOfferingId"><i class="icon-plus"></i> Add Service Attendance</a>
}

@Html.HiddenFor(m => m.StudentAssignedOfferingId)
<table class="table table-striped table-bordered DataTable table-sort" id="serviceAttendances"> 
	<thead>
		<tr>
            <th>Date</th>
			<th>Subject</th>
            <th>Duration</th>  
            <th>Notes</th>
            <th class="width10">Actions</th>   
		</tr>
	</thead>
	<tbody>
    </tbody>
</table>
@Html.Partial("_Modal")