@model SSD.ViewModels.ServiceOfferingListOptionsModel
@{
    ViewBag.Title = "Upload Assigned Services";
    Layout = "~/Views/Shared/_DoubleColumnLayout.cshtml";
}
@section styles {
    @Styles.Render("~/Content/DataTables/css/bundle")
}

@section Title{
    <i class="icon-cog title"></i> @ViewBag.Title
}

@section buttons{
    <ul>
        <li class="clearfix">
            <a id="uploadAssignedServiceOfferings" class="btn btn-large btn-primary" role="button" data-toggle="modal"><i class="icon-upload"></i> Upload Assigned Service Offerings</a>
        </li>
        <li class="clearfix">
            <a id="uploadServiceAttendances" class="btn btn-large btn-primary" role="button" data-toggle="modal"><i class="icon-upload"></i> Upload Service Attendances</a>
        </li>
    </ul>
}

@section SideContent{
    <h5><i class="icon-search"></i> Search</h5>
    <ul class="vert-form filter-wrap-inner">
        <li>
            <label><h5>Service Type, Provider or Program:</h5></label>
            <input id="autocompleteServiceTypeorProvider" name="autocompleteServiceTypeorProvider" type="text">
        </li>
    </ul>
    <h5><i class="icon-filter"></i> Filter By</h5>
    <div id="multiOpenAccordion">
        <h3><a href="#">Service Type</a></h3>
        <div>
            <ul id="TypeFilter">
                @foreach(var s in Model.TypeFilterList)
                {
                    <li class="clearfix"><input type="checkbox" class="serviceTypeFilter" data-value="@s">&nbsp;<label>@s</label></li>
                }
            </ul>
            @Html.Hidden("ServiceTypeFilterValues")
        </div>
    </div>
}

<div id="FilterHeader"></div>
<table class="table table-striped table-bordered table-sort" id="serviceOfferings">
	<thead>
		<tr>
            <th class="width10">Favorite</th>
            <th>Service Type</th>
            <th>Provider</th>
            <th>Program</th>
            <th class="nosort">Action</th>
		</tr>
	</thead>
	<tbody>
    </tbody>
</table>
@Html.Partial("_Modal")